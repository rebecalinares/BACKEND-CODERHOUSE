<div>
    <h2>Todos los Productos</h2>

    <h2>Bienvenido {{username}}</h2>

    <form action="../auth/logout" method="post">
        <button id="logout">Cerrar sesion</button>
    </form>
    
    {{#each productos}}
        <div>
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            <p>{{this.category}}</p>
            <p>{{this.stock}}</p>
        </div>
        <form action="../api/carts/64027d4a017df9efaa98fee8/product/{{this._id}}" method="post">
            <button type="submit">agragar al carrito</button>
        </form>
    {{/each}}

    <div>
        {{#if hasPrevPage}}
            <a href="/products?page={{prevPage}}&&limit={{limit}}"><button>Anterior</button></a>
        {{/if}}
        <p>{{page}}</p>
        {{#if hasNextPage}}
            <a href="/products?page={{nextPage}}&&limit={{limit}}"><button>Siguiente</button></a>
        {{/if}}
    </div>
</div>

<script src="/public/js/home.js"></script>